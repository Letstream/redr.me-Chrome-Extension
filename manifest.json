{
  "manifest_version": 3,
  "name": "__MSG_appName__",
  "version": "1.0",

  "default_locale": "en",
  "description": "__MSG_appDesc__",
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },

  "author": "Letstream",
  "homepage_url": "https://redr.me",

  "incognito": "spanning",
  "offline_enabled": false,

  "permissions": [
    "contextMenus",
    "clipboardWrite",
    "tabs",
    "scripting",
    "notifications"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Click to Shorten URL | Redr.me",
    "default_icon": "icons/icon-128.png"
  }
}